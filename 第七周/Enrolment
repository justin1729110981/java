package studentSubject;

class Enrolment {
	String subjectName;
	String subjectId;
	Student list[];
	int maxnumber;
	int count;
	
	public Enrolment(String subjectName, String subjectId, int maxnumber) {
		super();
		list=new Student[maxnumber];
		this.subjectName=subjectName;
		this.subjectId=subjectId;
		this.maxnumber=maxnumber;
		count=0;
	}
	
	public boolean add(Student student){
		if(count>=maxnumber)
			return false;
		else if(this.index(student)!=-1)
		{
			System.out.println("您已选过此课程！");
			return false;
		}
		else
		{
			list[count]=student;
			count++;
			return true;
		}
	}
	
	public boolean remove(Student student){
		int index=this.index(student);
		if(index==-1)
		{
			System.out.println("您未选过此课程!");
			return false;
		}
		else
		{
			for(int i=0;i<count;i++)
			{
				list[i]=list[i++];
			}
			count--;
			return true;
		}
		
	}
	
	public int index(Student student){
		for(int i=0;i<count;i++)
		{
			if(list[i].getId().equals(student.getId()))
				return i;
		}
		return -1;
	}
	
	public int size(){
		return count;
	}
	
	@Override
	public String toString() {
		String info=" ";
		info+=subjectName;
		info+=subjectId+"\n";
		for(int i=0;i<count;i++)
			info+=list[i].toString()+"\n";
		info+="学科信息 [课程名称" + subjectName + ", 课程代码" + subjectId +", 最大人数" + maxnumber+"]";
		return info;
	}
	
}
