package Bank;


class Customer {
	private String ssn;
	private String name;
	private CheckingAccount ca;
	private SavingAccount sa;
	public Customer(String ssn, String name, CheckingAccount ca, SavingAccount sa) {
		super();
		this.ssn = ssn;
		this.name = name;
		this.ca = ca;
		this.sa = sa;
	}
	
	public Customer(String ssn, String name, SavingAccount sa) {
		super();
		this.ssn = ssn;
		this.name = name;
		this.sa = sa;
	}

	public Customer(String ssn, String name, CheckingAccount ca) {
		super();
		this.ssn = ssn;
		this.name = name;
		this.ca = ca;
	}

	public Customer() {
		super();
		// TODO Auto-generated constructor stub
	}
	public Customer(String accountNum, double balance, double serviceCharge,
			            double interestRate,String ssn, String name){
		sa = new SavingAccount(accountNum,balance,interestRate);
		ca = new CheckingAccount(accountNum,balance,serviceCharge);
		this.ssn = ssn;
		this.name = name;
	}
	public String getSsn() {
		return ssn;
	}
	public void setSsn(String ssn) {
		this.ssn = ssn;
	}
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public CheckingAccount getCa() {
		return ca;
	}
	public void setCa(CheckingAccount ca) {
		this.ca = ca;
	}
	public SavingAccount getSa() {
		return sa;
	}
	public void setSa(SavingAccount sa) {
		this.sa = sa;
	}
	public void settleService() {
		this.ca.assessServiceCharge();
	}
	public void settleInterestRate() {
		this.sa.payInterest();
	}
	public void settle() {
		this.ca.assessServiceCharge();
		this.sa.payInterest();
	}
	@Override
	public String toString() {
		String info="";
		info+="ssn:"+ssn;
		info+="name:"+name+"\n";
		info+="信用卡:"+ca.toString()+"\n"+"存储卡:"+sa.toString();
		return info;
	}
	public String toStringSa() {
		String info="";
		info+="ssn:"+ssn;
		info+="name:"+name+"\n";
		info+="信用卡未开通"+"\n"+"存储卡:"+sa.toString();
		return info;
	}
	public String toStringCa() {
		String info="";
		info+="ssn:"+ssn;
		info+="name:"+name+"\n";
		info+="信用卡:"+ca.toString()+"\n"+"存储卡未开通";
		return info;
	}
	
	
}
