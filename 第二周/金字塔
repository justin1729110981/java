package a;

import java.util.Scanner;

public class 金字塔 {
	public static void main(String args[]) {
		int n,i,j,h;
		System.out.println("请输入行数:");
		Scanner scan=new Scanner(System.in);
		n=scan.nextInt();
		h=1;
		while(n>=h)
		{           
			i=h;/*3*/
			while(n>i)
			{
				System.out.print(" ");
				i++;
			}          /**/
			for(j=1;j<=h*2-1;j++)
				System.out.print("*");
			System.out.println();
			h++;
		}
	}
}
